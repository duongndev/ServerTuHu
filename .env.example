# Database Configuration
MONGO_URI=mongodb://localhost:27017/your-database-name
# Alternative: MongoDB Atlas connection string
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name

DB_USER=your-database-username
DB_PASS=your-database-password
DB_NAME=your-database-name

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-here-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-here-minimum-32-characters

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here-minimum-32-characters
SESSION_ENCRYPTION_KEY=your-super-secret-session-encryption-key-here-minimum-32-characters

# Server Configuration
PORT=5000
NODE_ENV=development

# Cloudinary Configuration (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET_KEY=your-cloudinary-api-secret

# Email Configuration (Optional - for email notifications)
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-email-app-password
MAIL_SERVICE=gmail
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587

# Firebase Configuration (Optional - for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=your-firebase-client-email@project.iam.gserviceaccount.com
FIREBASE_TYPE=service_account
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account
FIREBASE_UNIVERSE_DOMAIN=googleapis.com

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit the .env file to version control
# 4. Keep your secrets secure and use strong, unique values
# 5. For production, ensure NODE_ENV=production and use secure values